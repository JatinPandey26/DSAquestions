import java.io.*;
import java.util.*;

public class Main {

  public static void main(String[] args) throws Exception {
    Scanner sn = new Scanner(System.in);
    int n = sn.nextInt();
    
    for (int i = 0 ; i < n ; i++) {
     for(int j = 0 ; j < n ; j++){
         if(j == 0 || j == n-1 || (i == j || i+j == n-1) && i <= n/2 ){
             System.out.print("*\t");
         }
         else{
             System.out.print("\t");
         }
     }
     System.out.println();
    }
  }

}
